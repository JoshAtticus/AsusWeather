<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.asus.weather.revived">
    <supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:smallScreens="true"/>
    <application android:icon="@drawable/weather" android:label="@string/app_name">
        <provider android:authorities="com.asus.weather.revived.provider" android:name="com.asus.weather.WeatherContentProvider"/>
        <activity android:label="@string/app_name" android:name="com.asus.weather.WeatherListViewActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.MONKEY"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.asus.weather.WeatherManualActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.MONKEY"/>
            </intent-filter>
        </activity>
        <receiver android:enabled="true" android:exported="true" android:name="com.asus.weather.WeatherReceiver">
            <intent-filter>
                <action android:name="com.asus.weather.weatherIntentAction"/>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"/>
            </intent-filter>
        </receiver>
        <service android:name="com.asus.weather.WeatherService"/>
        <activity android:label="@string/app_name" android:name="com.asus.weather.WeatherFragmentSettings" android:theme="@android:style/Theme.Holo.NoActionBar" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="com.asus.weather.launchSetting"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <category android:name="android.intent.category.MONKEY"/>
            </intent-filter>
        </activity>
        <receiver android:enabled="true" android:exported="true" android:label="@string/app_name" android:name="com.asus.weather.WeatherWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.asus.weather.weatherIntentAction"/>
                <action android:name="com.asus.appwidget.action.RESIZE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/weather_provider"/>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
</manifest>
